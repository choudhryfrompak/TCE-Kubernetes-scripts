# /etc/ansible/hosts or inventory/hosts

# All Kubernetes nodes
[all]
k8s-master
k8s-worker1
k8s-worker2

# Primary control plane node
[master_main]
k8s-master

# All master nodes
[masters]
k8s-master

# All worker nodes
[workers]
k8s-worker1
k8s-worker2

# Common variables for all nodes
[all:vars]
ansible_user=ubuntu
ansible_become=yes
ansible_become_method=sudo
ansible_ssh_private_key_file=/path/to/your-aws-key.pem

ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'

